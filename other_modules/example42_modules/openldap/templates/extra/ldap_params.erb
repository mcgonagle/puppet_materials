# File Managed by Puppet
# This is the configuragion file for the extra Ldap management scripts

# Default group for ldap Users
DEFGID=100

# Starting UID for LDAP Users
STARTUID=10000

# User who can execute this script
RUNUSER=<%= scope.lookupvar('openldap::params::extra_user') %>

# Base DN
BASEDN=<%= scope.lookupvar('openldap::params::base_dn') %>

# Root DN for manipulating data
ROOTDN=<%= scope.lookupvar('openldap::params::root_dn') %>

# Root Password
ROOTPW=<%= scope.lookupvar('openldap::params::rootpw_clear') %>

# Basedir for Home Directories 
BASEHOME=/home

# LDAP HOST
SERVER=localhost

# BASE DOMAIN
DOMAIN=<%= fqdn %>

# ORGANIZATION NAME
ORGANIZATION=example42
