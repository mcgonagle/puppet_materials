# File managed by Puppet <%= puppetversion %> on <%= fqdn %>

SID="<%= samba_sid %>"
sambaDomain="<%= samba_workgroup %>"
slaveLDAP="<%= ldap_master %>"
slavePort="389"
masterLDAP="<%= ldap_slave %>"
masterPort="389"
ldapTLS="0"
verify="require"
cafile="/etc/pki/tls/certs/ldapserverca.pem"
clientcert="/etc/pki/tls/certs/ldapclient.pem"
clientkey="/etc/pki/tls/certs/ldapclientkey.pem"

suffix="<%= ldap_basedn %>"
usersdn="ou=People,${suffix}"
computersdn="ou=Computers,${suffix}"
groupsdn="ou=Group,${suffix}"
idmapdn="ou=Idmap,${suffix}"
sambaUnixIdPooldn="sambaDomainName=${sambaDomain},${suffix}"
scope="sub"
hash_encrypt="SSHA"
crypt_salt_format="%s"

userLoginShell="/bin/bash"
userHome="/home/%U"
userHomeDirectoryMode="700"
userGecos="System User"
defaultUserGid="513"
defaultComputerGid="515"
skeletonDir="/etc/skel"
defaultMaxPasswordAge="180"

userSmbHome="\\<%= samba_pdc %>\%U"
userProfile="\\<%= samba_pdc %>\profiles\%U"
userHomeDrive="H:"
userScript="logon.bat"
mailDomain="<%= domain %>"

with_smbpasswd="0"
smbpasswd="/usr/bin/smbpasswd"

with_slappasswd="0"
slappasswd="/usr/sbin/slappasswd"

no_banner="1"
